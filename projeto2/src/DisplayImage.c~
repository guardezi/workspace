#include <opencv/cv.h>
#include <opencv/highgui.h>



int main(int argc, char** argv) {
	IplImage* image;
	image = imread(argv[1], 1);
	if (argc != 2 || !image.data) {
		printf("No image data \n");
		return -1;
	}
	namedWindow("Display Image");
	imshow("Display Image", image);
	waitKey(0);
	return 0;
}
